<div class="container">
    <div class='row'>
        <div class="col-sm-3 sidenav" id="col-izq">
            <ul class="nav nav-pills nav-stacked">
              <li role="presentation"><a href="#">Programacion</a></li>
              <li role="presentation"><a href="#">Robotica</a></li>
              <li role="presentation"><a href="#">Mantenimiento</a></li>
            </ul>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Buscar">
              <span class="input-group-addon glyphicon glyphicon-search" aria-hidden="true"></span>
            </div>
        </div>
        <div class="col-sm-9" id="col-der">
            <ul class="list-group">
                <% page.posts.each(function(post){ %>
                    <li class="list-item-group">
                        <h4><small>Recent post</small></h4>
                        <hr>
                        <a href="<%- url_for(post.path) %>">
                            <h2><%= post.title %></h2>
                        </a>
                        <h4><small><span class="glyphicon glyphicon-time"></span> Post by <%= config.author %>, <%= date(post.date, config.date_format) %> </small></h4>

                        <% if(post.excerpt) { %>
                            <p><%- post.excerpt %></p>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
            <div  id="comentarios">
                <hr>
                <h3>Comentarios</h3>
                <div class="form-group">
                    <textarea class="form-control" rows="3"></textarea> 
                </div>
                <input type="submit" class="btn btn-success">
            </div>
        </div>
    </div>
</div>


